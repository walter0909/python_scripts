# 文本进度条

import time
scale = 50
print('执行开始'.center(scale//2,"-"))
start_time = time.perf_counter()
for i in range(scale+1):
    a = '*' *  i
    b = '.' * (scale - i)
    c = i/scale * 100
    dur = time.perf_counter() - start_time
    print("\r{:3.0f}% [{}->{}] 耗时：{:0.2f}s".format(c,a,b,dur))
    time.sleep(0.1)
print('执行结束'.center(scale//2,"-"))
